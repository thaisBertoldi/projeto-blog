<%- include ('../../partials/header.ejs') %>

<div class="container container-categorie">
  <div class="card">
    <div class="card-header">
        <h2>Novo artigo</h2>
    </div>
    <div class="card-body">
        <form method="POST" action="/articles/save" class="form-container">
            <input
                class="form-control"
                type="text"
                name="title"
                placeholder="Defina o tÃ­tulo do artigo"/>
            <textarea name="body" id="article" class="form-control" placeholder="Escreva seu artigo aqui!"></textarea>
            <label>Categoria</label>
            <select name="category" class="form-control">
                <% categories.forEach((category) => { %>
                    <option value="<%= category.id %>"><%= category.title %></option>
                <% }) %>
            </select>
            <button class="btn btn-dark btn-width">Cadastrar</button>
        </form>
    </div>
  </div>
</div>

<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>
