<%- include ('../../partials/header.ejs') %>
<div class="container">
    <h2>Categorias</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th></th>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
